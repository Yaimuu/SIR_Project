<?xml version="1.0" encoding="UTF-8"?>
<project name="sir_project.iml" default="all">
  
  
  <property file="build.iml.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.zip"/>
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.ear"/>
    <include name="*.jar"/>
    <include name="*.klib"/>
    <include name="*.ane"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.openjdk-15" value="${jdk.home.openjdk-15}/bin"/>
  <path id="jdk.classpath.openjdk-15">
    <fileset dir="${jdk.home.openjdk-15}">
      <include name="../openjdk-15.0.1!/java.base"/>
      <include name="../openjdk-15.0.1!/java.compiler"/>
      <include name="../openjdk-15.0.1!/java.datatransfer"/>
      <include name="../openjdk-15.0.1!/java.desktop"/>
      <include name="../openjdk-15.0.1!/java.instrument"/>
      <include name="../openjdk-15.0.1!/java.logging"/>
      <include name="../openjdk-15.0.1!/java.management"/>
      <include name="../openjdk-15.0.1!/java.management.rmi"/>
      <include name="../openjdk-15.0.1!/java.naming"/>
      <include name="../openjdk-15.0.1!/java.net.http"/>
      <include name="../openjdk-15.0.1!/java.prefs"/>
      <include name="../openjdk-15.0.1!/java.rmi"/>
      <include name="../openjdk-15.0.1!/java.scripting"/>
      <include name="../openjdk-15.0.1!/java.se"/>
      <include name="../openjdk-15.0.1!/java.security.jgss"/>
      <include name="../openjdk-15.0.1!/java.security.sasl"/>
      <include name="../openjdk-15.0.1!/java.smartcardio"/>
      <include name="../openjdk-15.0.1!/java.sql"/>
      <include name="../openjdk-15.0.1!/java.sql.rowset"/>
      <include name="../openjdk-15.0.1!/java.transaction.xa"/>
      <include name="../openjdk-15.0.1!/java.xml"/>
      <include name="../openjdk-15.0.1!/java.xml.crypto"/>
      <include name="../openjdk-15.0.1!/jdk.accessibility"/>
      <include name="../openjdk-15.0.1!/jdk.aot"/>
      <include name="../openjdk-15.0.1!/jdk.attach"/>
      <include name="../openjdk-15.0.1!/jdk.charsets"/>
      <include name="../openjdk-15.0.1!/jdk.compiler"/>
      <include name="../openjdk-15.0.1!/jdk.crypto.cryptoki"/>
      <include name="../openjdk-15.0.1!/jdk.crypto.ec"/>
      <include name="../openjdk-15.0.1!/jdk.crypto.mscapi"/>
      <include name="../openjdk-15.0.1!/jdk.dynalink"/>
      <include name="../openjdk-15.0.1!/jdk.editpad"/>
      <include name="../openjdk-15.0.1!/jdk.hotspot.agent"/>
      <include name="../openjdk-15.0.1!/jdk.httpserver"/>
      <include name="../openjdk-15.0.1!/jdk.incubator.foreign"/>
      <include name="../openjdk-15.0.1!/jdk.incubator.jpackage"/>
      <include name="../openjdk-15.0.1!/jdk.internal.ed"/>
      <include name="../openjdk-15.0.1!/jdk.internal.jvmstat"/>
      <include name="../openjdk-15.0.1!/jdk.internal.le"/>
      <include name="../openjdk-15.0.1!/jdk.internal.opt"/>
      <include name="../openjdk-15.0.1!/jdk.internal.vm.ci"/>
      <include name="../openjdk-15.0.1!/jdk.internal.vm.compiler"/>
      <include name="../openjdk-15.0.1!/jdk.internal.vm.compiler.management"/>
      <include name="../openjdk-15.0.1!/jdk.jartool"/>
      <include name="../openjdk-15.0.1!/jdk.javadoc"/>
      <include name="../openjdk-15.0.1!/jdk.jcmd"/>
      <include name="../openjdk-15.0.1!/jdk.jconsole"/>
      <include name="../openjdk-15.0.1!/jdk.jdeps"/>
      <include name="../openjdk-15.0.1!/jdk.jdi"/>
      <include name="../openjdk-15.0.1!/jdk.jdwp.agent"/>
      <include name="../openjdk-15.0.1!/jdk.jfr"/>
      <include name="../openjdk-15.0.1!/jdk.jlink"/>
      <include name="../openjdk-15.0.1!/jdk.jshell"/>
      <include name="../openjdk-15.0.1!/jdk.jsobject"/>
      <include name="../openjdk-15.0.1!/jdk.jstatd"/>
      <include name="../openjdk-15.0.1!/jdk.localedata"/>
      <include name="../openjdk-15.0.1!/jdk.management"/>
      <include name="../openjdk-15.0.1!/jdk.management.agent"/>
      <include name="../openjdk-15.0.1!/jdk.management.jfr"/>
      <include name="../openjdk-15.0.1!/jdk.naming.dns"/>
      <include name="../openjdk-15.0.1!/jdk.naming.rmi"/>
      <include name="../openjdk-15.0.1!/jdk.net"/>
      <include name="../openjdk-15.0.1!/jdk.nio.mapmode"/>
      <include name="../openjdk-15.0.1!/jdk.sctp"/>
      <include name="../openjdk-15.0.1!/jdk.security.auth"/>
      <include name="../openjdk-15.0.1!/jdk.security.jgss"/>
      <include name="../openjdk-15.0.1!/jdk.unsupported"/>
      <include name="../openjdk-15.0.1!/jdk.unsupported.desktop"/>
      <include name="../openjdk-15.0.1!/jdk.xml.dom"/>
      <include name="../openjdk-15.0.1!/jdk.zipfs"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.openjdk-15}"/>
  <property name="project.jdk.bin" value="${jdk.bin.openjdk-15}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.openjdk-15"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.lib.classpath">
    <fileset dir="${basedir}/javafx-sdk-15.0.1/lib">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  
  
  <!-- Global Libraries -->
  
  <path id="library.lib.classpath">
    <fileset dir="${path.variable.path_to_fx}">
      <patternset refid="library.patterns"/>
    </fileset>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
      <include name="forms_rt.jar"/>
    </fileset>
    <fileset dir="${idea.home}/plugins/java/lib">
      <include name="javac2.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module SIR_Project -->
  
  <dirname property="module.sir_project.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.sir_project" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.sir_project" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.sir_project" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.sir_project" value="-encoding UTF-8 -source 14 -target 14 ${compiler.args}"/>
  
  <property name="sir_project.output.dir" value="${module.sir_project.basedir}/out/production/SIR_Project"/>
  <property name="sir_project.testoutput.dir" value="${module.sir_project.basedir}/out/test/SIR_Project"/>
  
  <path id="sir_project.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="sir_project.module.production.classpath">
    <path refid="${module.jdk.classpath.sir_project}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="sir_project.runtime.production.module.classpath">
    <pathelement location="${sir_project.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="sir_project.module.classpath">
    <path refid="${module.jdk.classpath.sir_project}"/>
    <pathelement location="${sir_project.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="sir_project.runtime.module.classpath">
    <pathelement location="${sir_project.testoutput.dir}"/>
    <pathelement location="${sir_project.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.sir_project">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sir_project">
    <patternset refid="excluded.from.module.sir_project"/>
  </patternset>
  
  <path id="sir_project.module.sourcepath">
    <dirset dir="${module.sir_project.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.sir_project" depends="compile.module.sir_project.production,compile.module.sir_project.tests" description="Compile module SIR_Project"/>
  
  <target name="compile.module.sir_project.production" depends="register.custom.compilers" description="Compile module SIR_Project; production classes">
    <mkdir dir="${sir_project.output.dir}"/>
    <javac2 destdir="${sir_project.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.sir_project}/javac">
      <compilerarg line="${compiler.args.sir_project}"/>
      <bootclasspath refid="sir_project.module.bootclasspath"/>
      <classpath refid="sir_project.module.production.classpath"/>
      <src refid="sir_project.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.sir_project"/>
    </javac2>
    
    <copy todir="${sir_project.output.dir}">
      <fileset dir="${module.sir_project.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.sir_project.tests" depends="register.custom.compilers,compile.module.sir_project.production" description="compile module SIR_Project; test classes" unless="skip.tests"/>
  
  <target name="clean.module.sir_project" description="cleanup module">
    <delete dir="${sir_project.output.dir}"/>
    <delete dir="${sir_project.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.sir_project, clean.artifact.sir_project" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.sir_project" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.sir_project" value="${basedir}/out/artifacts/SIR_Project"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.SIR_Project" value="${artifacts.temp.dir}/SIR_Project.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.openjdk-15}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.sir_project" description="clean SIR_Project artifact output">
    <delete dir="${artifact.output.sir_project}"/>
  </target>
  
  <target name="artifact.sir_project" depends="init.artifacts, compile.module.sir_project" description="Build &#39;SIR_Project&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.sir_project}"/>
    <copy todir="${artifact.temp.output.SIR_Project}">
      <fileset dir="${sir_project.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_SIR_Project" dir="${artifact.temp.output.SIR_Project}" includes="**/*.jar">
      <exclude name="SIR_Project.jar"/>
    </fx:fileset>
    <fx:fileset id="all_SIR_Project" dir="${artifact.temp.output.SIR_Project}" includes="**/*.jar"/>
    <fx:application id="SIR_Project_id" name="SIR_Project" mainClass="View.Main"/>
    <fx:jar destfile="${artifact.temp.output.SIR_Project}/SIR_Project.jar">
      <fx:application refid="SIR_Project_id"/>
      <fileset dir="${artifact.temp.output.SIR_Project}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_SIR_Project"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value=""/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value=""/>
      </manifest>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.SIR_Project}/deploy" outfile="SIR_Project">
      <fx:application refid="SIR_Project_id"/>
      <fx:resources>
        <fx:fileset refid="all_SIR_Project"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.sir_project}">
      <fileset dir="${artifact.temp.output.SIR_Project}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.SIR_Project}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.sir_project" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>